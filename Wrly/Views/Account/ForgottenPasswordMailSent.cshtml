@{
    ViewBag.Title = "Sklative: Forgotten password";
    ViewBag.Description = "Recover account password on sklative, find the account by your email address and set a new password.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="string join-container">
    <div class="string-wrapper">
        <div class="content-container">
            <div class="reg-content-wrapper">
                <div class="wizard-form-container form-container">
                    <div class="wizard-form-wrapper forgot-container">
                        <p>We have sent an email containing a link to create a new password, please note for the security reason system cannot read user passwords in plain format, you need to create a new password or alternatively, use your social media account to login and then reset it.</p>
                        Back to <a href="/">Home</a> <a href="/account/login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section _HeadStyles{
    @Styles.Render("~/cdn/_AccountSharedStyles")
}