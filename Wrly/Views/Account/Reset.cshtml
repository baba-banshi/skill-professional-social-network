@model Wrly.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Sklative: Create new password";
    ViewBag.Description = "Create new account password on sklative, set a new passwork and unlock your account.";
}

<div class="string join-container">
    <div class="string-wrapper">
        <div class="content-container">
            <div class="reg-content-wrapper">
                <div class="wizard-form-container form-container">
                    <div class="wizard-form-wrapper">
                        <section>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                  <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder="enter new password" })
                                        @Html.ValidationMessageFor(m => m.NewPassword)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , placeholder="confirm new password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    </div>
                                </div>
                                <div class="form-group buttons">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create new password" class="btn btn-primary btn-sm" />@Html.ActionLink("Back to login", "Login", null, new { @class = "second-link" })
                                    </div>
                                </div>
                            }
                        </section>
                        <section id="socialLoginForm">
                            @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section _HeadStyles{
    @Styles.Render("~/cdn/_AccountSharedStyles")
}
