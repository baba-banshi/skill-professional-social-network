@model Wrly.Models.ConnectAccountViewModel
@{
    ViewBag.Title = "ConnectAccount";
}

<h2>Connect your account with @Model.Name</h2>
<p>
    Here is the step to connect your account with @Model.Name so that you can manage the connections, followers, openings and a lot more for @Model.Name
</p>
@using (Html.BeginForm())
{
    @Html.HiddenFor(c => c.OrganizationID)
    @Html.HiddenFor(c => c.Name)
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterInfo.EmailAddress, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterInfo.EmailAddress, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterInfo.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterInfo.FullName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterInfo.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterInfo.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterInfo.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterInfo.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <span>Your role at @Model.Name</span>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.JobRollName, new { @class = "form-control" })
            @Html.HiddenFor(m => m.JobRoleID, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-sm" value="Join!" />
        </div>
    </div>
}


