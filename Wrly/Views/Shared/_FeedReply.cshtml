@model Wrly.Models.ReplyViewModel
@{var container = Guid.NewGuid().ToString();}
<div class="feed-comment">
    <div class="clearfix" direction="left">
        <div class="left">
            <div class="comment-thumb-con">
                <a href="/@Model.ProfileUrl">
                    <img class="comment-thumb-img" src="@Html.ImagePath(Model.AuthorPhoto,50)" alt="@Model.AuthorName" />
                </a>
            </div>
        </div>
        <div class="">
            <div class="comment-action-con ofh">
                <div class="comment-input-con" data-container-id="reply-item-@container">
                    @if (!string.IsNullOrEmpty(Model.ProfileHeading))
                    {
                        <div>
                            <div>
                                <a class=" UFICommentActorName" data-hover-card="true" data-entity-id="@Model.EntityID" title="@Model.FormatedName">@Model.AuthorName</a>
                            </div>
                            <small class="child-headings">@Model.ProfileHeading</small>
                        </div>
                        @Model.Reply
                    }
                    else
                    {
                        <div>
                            <a class=" UFICommentActorName" data-hover-card="true" data-entity-id="@Model.EntityID" title="@Model.FormatedName">@Model.AuthorName</a>
                            @Model.Reply
                        </div>
                    }
                    <div class="comment-action-buttons">
                        @if (Model.Liked)
                        {
                            <button onclick="return ____executeFeedReplyAction($(this))" data-hash="@Model.Hash" data-action="unlike" class="link-alike added">Like</button>
                        }
                        else
                        {
                            <button onclick="return ____executeFeedReplyAction($(this))" data-hash="@Model.Hash" data-action="like" class="link-alike">Like</button>
                        }
                        <button data-val-container="reply-item-@container" data-hash="@Model.Hash" data-action="reply" onclick="return ____executeFeedReplyAction($(this))" class="link-alike">Comment</button>
                        @if (Model.AllowDelete)
                        {
                            <button data-val-container="reply-item-@container" data-hash="@Model.Hash" data-action="remove" onclick="return ____executeFeedReplyAction($(this))" class="link-alike">Delete</button>
                        }
                    </div>
                    <div id="child-render-area"></div>
                </div>

            </div>
        </div>
    </div>
</div>

