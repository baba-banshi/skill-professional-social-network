@model Wrly.Models.AccompishmentAppriciation

@using (Html.BeginForm("manageAppriciation", "Reference", FormMethod.Post, new { @class = "form-horizontal", role = "form", @onsubmit = "return manageAppreciation($(this))" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Hash)
    @Html.HiddenFor(c => c.UserHash)
    @Html.HiddenFor(c => c.Accomplishment.AwardID)
    <div>Write for @Model.Accomplishment.Name</div>
    <div class="form-group">
        <label class="control-label">Tell what's great he did in @Model.Accomplishment.Name:</label>
        <div class="col-md-10">
            @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-sm" value="Add to card" />
        </div>
    </div>
}


