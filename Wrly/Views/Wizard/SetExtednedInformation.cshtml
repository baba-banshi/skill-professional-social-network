@model Wrly.Models.ExtendedInfoViewModel
@{
    ViewBag.Title = "Feeback";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";
}
<div class="string join-container">
    <div class="string-wrapper">
        <div class="content-container">
            <div class="reg-content-wrapper">
                <div class="wizard-form-container form-container">
                    <div class="wizard-form-wrapper">
                        <div class=" text-center">
                            <h1>More information</h1>
                            <h2>Your business profile is uncompleted until you have least information added.</h2>
                        </div>
                        <div class="wizard-content-section">
                            @using (Html.BeginForm("SetExtednedInformation", "Wizard", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(c => c.Hash)
                                <div class="row ">
                                    <div class="col-sm-6">
                                        <label class="control-label">Established year:</label>
                                        @Html.TextBoxFor(c => c.EstablishedYear, new { @id = "txtEstablishedYear", maxlength = "500", @class = "form-control", @placeholder = "[0000] - enter when organization were established or founded(4 Digit year)" })
                                        @Html.ValidationMessageFor(c => c.EstablishedYear)
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="control-label">Primary phone:</label>
                                        @Html.TextBoxFor(c => c.Phone1, new { @id = "txtPhone1", maxlength = "500", @class = "form-control", @placeholder = "organization primary phone along with country code" })
                                        @Html.ValidationMessageFor(c => c.Phone1)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label class="control-label">How big are you?</label>
                                        @Html.DropDownListFor(c => c.EmployeeStrength, Model.EmployeeStrengths, new { @id = "txtEmployeeStrength", maxlength = "500", @class = "form-control" })
                                        @Html.ValidationMessageFor(c => c.EmployeeStrength)
                                    </div>

                                    <div class="col-sm-6">
                                        <label class="control-label">Summary</label>
                                        @Html.TextAreaFor(c => c.Description, new { @id = "txtDescription", maxlength = "500", @class = "form-control" })
                                        (<small class="hint">Tell something like short description about organization or sevice you offer.</small>)
                                        @Html.ValidationMessageFor(c => c.Description)



                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-primary btn-sm" value="Save" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section _HeadStyles{
    @Styles.Render("~/cdn/_WizardMobileStyles");
}