@model Wrly.Models.AbuseViewModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label">Your name:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Your email address:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.EmailAddress, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Your email address:</label>
        <div class="col-md-10">
            <select name="Type" class="form-control" id="Type">
                <option value="company">Organization profile</option>
                <option value="email">Email address</option>
                <option value="trademark">Trademark</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" id="lable-particular">Enter profile url:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(c => c.Particular, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" id="lable-particular">Description of abuse:</label>
        <div class="col-md-10">
            @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-right">
        <button class="btn btn-primary btn-sm">Report</button>
    </div>   
}